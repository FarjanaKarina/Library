@model IEnumerable<dynamic>

@{
    Layout = "_LibrarianLayout";
}

<div class="container mt-4">

    <h2>Overdue Borrowed Books</h2>
    <p class="text-muted">
        List of students who have overdue books
    </p>

    <hr />

    @if (!Model.Any())
    {
        <div class="alert alert-success">
            No overdue books found.
        </div>
    }
    else
    {
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Student</th>
                    <th>Book</th>
                    <th>Due Date</th>
                    <th>Overdue Days</th>
                    <th>Fine (TK)</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var o in Model)
                {
                    <tr>
                        <td>@o.StudentName</td>
                        <td>@o.BookTitle</td>
                        <td>@o.DueDate.ToString("yyyy-MM-dd")</td>
                        <td>@o.OverdueDays</td>
                        <td>@o.Fine</td>
                        <td>
                            <form asp-action="SendOverdueWarning" method="post">
                                <input type="hidden" name="userId" value="@o.UserId" />
                                <input type="hidden" name="bookTitle" value="@o.BookTitle" />
                                <button class="btn btn-warning btn-sm">
                                    Send Warning
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

</div>
