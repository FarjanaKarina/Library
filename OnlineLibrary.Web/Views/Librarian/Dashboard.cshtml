@model OnlineLibrary.Web.Models.LibrarianDashboardViewModel
@{
    Layout = "_LibrarianLayout";
}


<div class="container mt-4">

    <h2>Librarian Dashboard</h2>

    <!-- ========================= -->
    <!-- SUMMARY CARDS -->
    <!-- ========================= -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-dark text-white">
                <div class="card-body">
                    <h6>Total Books</h6>
                    <h3>@ViewBag.TotalBooks</h3>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h6>Active Borrows</h6>
                    <h3>@ViewBag.ActiveBorrows</h3>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card bg-danger text-white">
                <div class="card-body">
                    <h6>Overdue</h6>
                    <h3>@ViewBag.OverdueBorrows</h3>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h6>Active Memberships</h6>
                    <h3>@ViewBag.ActiveMemberships</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- ========================= -->
    <!-- OVERDUE BORROWS -->
    <!-- ========================= -->
    <h4>Overdue Borrowed Books</h4>

    @if (!Model.OverdueBorrows.Any())
    {
        <p class="text-muted">No overdue books.</p>
    }
    else
    {
        <table class="table table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Student</th>
                    <th>Book</th>
                    <th>Due Date</th>
                    <th>Days</th>
                    <th>Fine (TK)</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var o in Model.OverdueBorrows)
                {
                    <tr>
                        <td>@o.StudentName</td>
                        <td>@o.BookTitle</td>
                        <td>@o.DueDate.ToString("yyyy-MM-dd")</td>
                        <td>@o.OverdueDays</td>
                        <td>@o.FineAmount</td>
                        <td>
                            <form asp-action="SendOverdueWarning" method="post">
                                <input type="hidden" name="borrowId" value="@o.BorrowId" />
                                <button class="btn btn-warning btn-sm">
                                    Send Warning
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <!-- ========================= -->
    <!-- MEMBERSHIP REQUESTS -->
    <!-- ========================= -->
    <h4 class="mt-5">Pending Membership Requests</h4>

    @if (!Model.PendingMemberships.Any())
    {
        <p class="text-muted">No pending membership requests.</p>
    }
    else
    {
        <table class="table table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Student</th>
                    <th>Email</th>
                    <th>Applied At</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var m in Model.PendingMemberships)
                {
                    <tr>
                        <td>@m.StudentName</td>
                        <td>@m.Email</td>
                        <td>@m.AppliedAt.ToString("yyyy-MM-dd")</td>
                        <td>
                            <form asp-controller="Admin"
                                  asp-action="ApproveMembership"
                                  method="post"
                                  style="display:inline">
                                <input type="hidden" name="id" value="@m.MembershipId" />
                                <button class="btn btn-success btn-sm">Approve</button>
                            </form>

                            <form asp-controller="Admin"
                                  asp-action="RejectMembership"
                                  method="post"
                                  style="display:inline">
                                <input type="hidden" name="id" value="@m.MembershipId" />
                                <button class="btn btn-danger btn-sm">Reject</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

</div>
