@model OnlineLibrary.Web.Models.LibrarianDashboardViewModel
@{
    var currentRole = ViewBag.CurrentRole as string;
    Layout = currentRole == "Admin" ? "_AdminLayout" : "_LibrarianLayout";
    ViewData["Title"] = (currentRole == "Admin" ? "Admin" : "Librarian") + " Operations Dashboard";
}

<div class="container mt-4">
    <h2>@(currentRole == "Admin" ? "Admin" : "Librarian") Operations Dashboard</h2>

    <!-- SUMMARY CARDS -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card bg-dark text-white">
                <div class="card-body text-center">
                    <h3>@Model.TotalBooks</h3>
                    <p class="mb-0">Total Books</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card bg-success text-white">
                <div class="card-body text-center">
                    <h3>@Model.TotalOrders</h3>
                    <p class="mb-0">Total Orders</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card bg-warning text-dark">
                <div class="card-body text-center">
                    <h3>@Model.PendingOrders</h3>
                    <p class="mb-0">Pending Orders</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mt-3">
            <div class="card bg-info text-white">
                <div class="card-body text-center">
                    <h3>@Model.PendingReturns</h3>
                    <p class="mb-0">Pending Returns</p>
                </div>
            </div>
        </div>
    </div>

    <!-- RECENT ORDERS -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0"><i class="bi bi-receipt me-2"></i>Recent Orders</h5>
        </div>
        <div class="card-body">
            @if (Model.RecentOrders.Count == 0)
            {
                <p class="text-muted">No recent orders.</p>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Transaction ID</th>
                                <th>Student</th>
                                <th>Date</th>
                                <th>Amount</th>
                                <th>Status</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model.RecentOrders)
                            {
                                <tr>
                                    <td><code>@order.TransactionId</code></td>
                                    <td>@order.StudentName</td>
                                    <td>@order.OrderDate.ToString("dd-MM-yyyy")</td>
                                    <td><strong class="text-success">৳@order.TotalAmount.ToString("N0")</strong></td>
                                    <td>
                                        @{
                                            var statusClass = order.OrderStatus switch
                                            {
                                                "Delivered" => "bg-success",
                                                "Shipped" => "bg-info",
                                                "Packed" => "bg-warning text-dark",
                                                "Confirmed" => "bg-primary",
                                                _ => "bg-secondary"
                                            };
                                        }
                                        <span class="badge @statusClass">@order.OrderStatus</span>
                                    </td>
                                    <td>
                                        <a asp-controller="Librarian" asp-action="OrderDetails" asp-route-id="@order.OrderId"
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-eye"></i> View
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>

    <!-- PENDING RETURN REQUESTS -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0"><i class="bi bi-arrow-return-left me-2"></i>Pending Return Requests</h5>
        </div>
        <div class="card-body">
            @if (Model.PendingReturnRequests.Count == 0)
            {
                <p class="text-muted">No pending return requests.</p>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Transaction ID</th>
                                <th>Student</th>
                                <th>Book</th>
                                <th>Requested</th>
                                <th>Refund Amount</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var req in Model.PendingReturnRequests)
                            {
                                <tr>
                                    <td><code>@req.TransactionId</code></td>
                                    <td>@req.StudentName</td>
                                    <td>@req.BookTitle</td>
                                    <td>@req.ReturnRequestedAt?.ToString("dd-MM-yyyy HH:mm")</td>
                                    <td><strong class="text-success">৳@((req.Price * 0.5m).ToString("N0"))</strong></td>
                                    <td>
                                        <a asp-controller="Librarian" asp-action="ReturnRequests"
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-check-circle"></i> Process
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>