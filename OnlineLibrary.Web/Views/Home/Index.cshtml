    </div>
</section>

<!-- =========================
     BEST SELLING / TOP RATED
========================= -->
    <section class="best-selling-section">
        <div class="container my-5">

            <div class="d-flex justify-content-between align-items-center mb-4">
                <h3 class="fw-bold">Best Selling Books</h3>
                <a asp-controller="Home"
                   asp-action="BestSellers"
                   class="btn btn-danger rounded-pill px-4">
                    View All
                </a>
            </div>

            <div class="best-slider">
                <button class="slider-arrow left" onclick="slideBooks(-1)">&#10094;</button>

                <div class="best-slider-track" id="bestSlider">
                    @foreach (var book in Model.TopRatedBooks)
                    {
                        <div class="best-book-card">
                            <div class="best-book-img">
                                <img src="@book.ImageUrl"
                                     onerror="this.src='/images/no-book.png'" />

                                @if (currentRole == "Student")
                                {
                                    <div class="hover-icons">
                                        <a asp-controller="Book"
                                           asp-action="Details"
                                           asp-route-id="@book.BookId"
                                           class="icon-btn">
                                            <i class="bi bi-eye"></i>
                                        </a>

                                        <button class="icon-btn"
                                                onclick="addToCart('@book.BookId')">
                                            <i class="bi bi-cart-plus"></i>
                                        </button>
                                    </div>
                                }
                                else
                                {
                                    <div class="hover-icons">
                                        <a asp-controller="Book"
                                           asp-action="Details"
                                           asp-route-id="@book.BookId"
                                           class="icon-btn">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                    </div>
                                }
                            </div>

                            <div class="best-book-info">
                                <h6>@book.Title</h6>
                                <small>@book.Author</small>
                                <div class="price">@book.Price.ToString("0.00") TK</div>
                            </div>
                        </div>
                    }
                </div>

                <button class="slider-arrow right" onclick="slideBooks(1)">&#10095;</button>
            </div>
        </div>
    </section>
<!-- =========================
       EXPLORE OUR COLLECTION
  ========================= -->
<section class="container my-5 text-center">

    <h2 class="fw-bold mb-1">Explore Our Collection</h2>
    <p class="text-muted mb-4">
        Discover a wide range of books from our library collection
    </p>

    <div class="row g-4 text-start">
        @foreach (var book in Model.ExploreBooks)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="book-card">
                    <!-- Book Image -->
                    <div class="book-image-container">
                        <img src="@(book.ImageUrl ?? "/images/default-book.png")"
                             alt="@book.Title"
                             class="book-image"
                             onerror="this.src='/images/default-book.png'" />

                        <!-- Hover Icons - Matching Landing Page Style -->
                        @if (currentRole == "Student")
                        {
                            <div class="hover-icons">
                                <button class="icon-btn"
                                        onclick="addToCart('@book.BookId')"
                                        title="Add to Cart">
                                    <i class="bi bi-cart-plus"></i>
                                </button>
                                <button class="icon-btn wishlist-icon-btn"
                                        onclick="toggleWishlist('@book.BookId', this)"
                                        title="Add to Wishlist">
                                    <i class="bi bi-heart"></i>
                                </button>
                            </div>
                        }
                        else
                        {
                            <div class="hover-icons">
                                <a asp-controller="Book"
                                   asp-action="Details"
                                   asp-route-id="@book.BookId"
                                   class="icon-btn">
                                    <i class="bi bi-eye"></i>
                                </a>
                            </div>
                        }

                        <!-- Availability Badge -->
                        @if (book.AvailableCopies > 0)
                        {
                            <span class="badge bg-success availability-badge">
                                <i class="bi bi-check-circle"></i> Available
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-danger availability-badge">
                                <i class="bi bi-x-circle"></i> Out of Stock
                            </span>
                        }
                    </div>

                    <!-- Book Info -->
                    <div class="book-info">
                        <h6 class="book-title" title="@book.Title">@book.Title</h6>
                        <p class="book-author">
                            <i class="bi bi-person"></i> @book.Author
                        </p>

                        <div class="book-meta">
                            <div class="book-price">
                                <i class="bi bi-tag-fill"></i> ৳@book.Price.ToString("N0")
                            </div>
                            <div class="book-stock text-muted">
                                <i class="bi bi-box"></i> @book.AvailableCopies left
                            </div>
                        </div>

                        <a asp-controller="Book"
                           asp-action="Details"
                           asp-route-id="@book.BookId"
                           class="btn btn-outline-primary btn-sm w-100">
                            <i class="bi bi-eye"></i> View Details
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="mt-4">
        <a asp-controller="Home"
           asp-action="Browse"
           class="discover-btn">
            DISCOVER MORE BOOKS
        </a>
    </div>
</section>
