@model OnlineLibrary.Web.Models.HomeIndexViewModel

@{
    ViewData["Title"] = "Online Library";
    
    // Use StudentLayout if logged in as Student, otherwise use AppLayout
    var currentRole = ViewBag.CurrentRole as string;
    if (currentRole == "Student")
    {
        Layout = "_StudentLayout";
    }
    else if (currentRole == "Librarian")
    {
        Layout = "_LibrarianLayout";
    }
    else if (currentRole == "Admin")
    {
        Layout = "_AdminLayout";
    }
    else
    {
        Layout = "_AppLayout";
    }
}

@if (ViewBag.CurrentRole != "Admin" && ViewBag.CurrentRole != "Librarian")
{
    <!-- =========================
         HERO + SEARCH
    ========================= -->
    <section class="hero-section">

        <!-- SEARCH BAR -->
        <div class="hero-search" id="topSearch">
            <div class="search-box">
                <input type="text"
                       id="searchInput"
                       placeholder="Search by title, author, publisher or category" />
                <button type="button">
                    <i class="bi bi-search"></i>
                </button>
            </div>
        </div>

        <!-- FEATURED CAROUSEL -->
        <div id="featuredCarousel"
             class="carousel slide hero-carousel"
             data-bs-ride="carousel">

            <div class="carousel-inner">
                @{
                    var isFirst = true;
                }

                @foreach (var book in Model.FeaturedBooks)
                {
                    <div class="carousel-item @(isFirst ? "active" : "")">
                        @{
                            isFirst = false;
                        }

                        <div class="row align-items-center">

                            <!-- LEFT -->
                            <div class="col-md-6 px-5">
                                <span class="hero-badge">New Release</span>

                                <h1 class="hero-title">@book.Title</h1>

                                <p class="hero-text mt-3">
                                    @book.Description
                                </p>

                                <div class="mt-4 d-flex gap-3 flex-wrap">
                                    <a asp-controller="Book"
                                       asp-action="Details"
                                       asp-route-id="@book.BookId"
                                       class="hero-btn">
                                        View Details
                                    </a>

                                    @if (!string.IsNullOrEmpty(book.PdfUrl))
                                    {
                                        <a asp-controller="Book"
                                           asp-action="Details"
                                           asp-route-id="@book.BookId"
                                           class="hero-btn-outline">
                                            Read Online
                                        </a>
                                    }
                                </div>
                            </div>

                            <!-- RIGHT -->
                            <div class="col-md-6 text-center">
                                <img src="@book.ImageUrl"
                                     class="hero-book-img"
                                     alt="@book.Title" />
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- ARROWS -->
            <button class="carousel-control-prev"
                    type="button"
                    data-bs-target="#featuredCarousel"
                    data-bs-slide="prev">
                <span class="hero-arrow">&#10094;</span>
            </button>

            <button class="carousel-control-next"
                    type="button"
                    data-bs-target="#featuredCarousel"
                    data-bs-slide="next">
                <span class="hero-arrow">&#10095;</span>
            </button>
        </div>
    </section>

    <!-- =========================
         STORE BENEFITS
    ========================= -->
    <section class="store-benefits">
        <div class="container">
            <div class="row text-center">

                <div class="col-md-3 col-6 mb-4">
                    <i class="bi bi-truck benefit-icon"></i>
                    <h6>Fast Delivery</h6>
                    <p>Quick and reliable delivery.</p>
                </div>

                <div class="col-md-3 col-6 mb-4">
                    <i class="bi bi-book benefit-icon"></i>
                    <h6>Read Sample</h6>
                    <p>Preview before purchase.</p>
                </div>

                <div class="col-md-3 col-6 mb-4">
                    <i class="bi bi-shield-lock benefit-icon"></i>
                    <h6>Secure Payment</h6>
                    <p>Safe & trusted methods.</p>
                </div>

                <div class="col-md-3 col-6 mb-4">
                    <i class="bi bi-arrow-repeat benefit-icon"></i>
                    <h6>Easy Returns</h6>
                    <p>Hassle-free policy.</p>
                </div>

            </div>
        </div>
    </section>

    <!-- =========================
         BEST SELLING / TOP RATED
    ========================= -->
    <section class="best-selling-section">
        <div class="container my-5">

            <div class="d-flex justify-content-between align-items-center mb-4">
                <h3 class="fw-bold">Best Selling Books</h3>
                <a asp-controller="Book"
                   asp-action="Browse"
                   class="btn btn-danger rounded-pill px-4">
                    View All
                </a>
            </div>

            <div class="best-slider">
                <button class="slider-arrow left" onclick="slideBooks(-1)">&#10094;</button>

                <div class="best-slider-track" id="bestSlider">
                    @foreach (var book in Model.TopRatedBooks)
                    {
                        <div class="best-book-card">
                            <div class="best-book-img">
                                <img src="@book.ImageUrl"
                                     onerror="this.src='/images/no-book.png'" />

                                <div class="hover-icons">
                                    <a asp-controller="Book"
                                       asp-action="Details"
                                       asp-route-id="@book.BookId"
                                       class="icon-btn">
                                        <i class="bi bi-book"></i>
                                    </a>

                                    <button class="icon-btn"
                                            onclick="toggleWishlist('@book.BookId', this)">
                                        <i class="bi bi-heart"></i>
                                    </button>
                                </div>
                            </div>

                            <div class="best-book-info">
                                <h6>@book.Title</h6>
                                <small>@book.Author</small>
                                <div class="text-warning">★★★★★</div>
                                <div class="price">@book.Price.ToString("0.00") TK</div>
                            </div>
                        </div>
                    }
                </div>

                <button class="slider-arrow right" onclick="slideBooks(1)">&#10095;</button>
            </div>
        </div>
    </section>

    <!-- =========================
         EXPLORE OUR COLLECTION
    ========================= -->
    <section class="container my-5 text-center">

        <h2 class="fw-bold mb-1">Explore Our Collection</h2>
        <p class="text-muted mb-4">
            Discover a wide range of books from our library collection
        </p>

        <div class="collection-grid">
            @foreach (var book in Model.ExploreBooks)
            {
                <div class="collection-item">
                    <img src="@book.ImageUrl"
                         onerror="this.src='/images/no-book.png'" />

                    <div class="collection-meta">
                        <p class="book-title">@book.Title</p>
                        <div class="book-rating">★★★★★</div>
                        <p class="book-price">@book.Price.ToString("0.00") TK</p>
                    </div>
                </div>
            }
        </div>

        <div class="mt-4">
            <a asp-controller="Book"
               asp-action="Browse"
               class="discover-btn">
                DISCOVER MORE BOOKS
            </a>
        </div>
    </section>
}

@section Scripts {
    <script>
        let timer = null;

        function loadSearch() {
            clearTimeout(timer);

            timer = setTimeout(function () {

                const search = $("#searchInput").val();

                if (search.trim().length === 0) {
                    $("#searchResults").empty();
                    $("#defaultBooks").show();
                    return;
                }

                $("#defaultBooks").hide();

                $.get("/Home/Search", { search: search }, function (data) {

                    let html = "";

                    if (data.length === 0) {
                        html = `
                            <div class="col-12">
                                <div class="alert alert-warning text-center">
                                    No books found.
                                </div>
                            </div>`;
                    } else {
                        data.forEach(b => {
                            html += `
                            <div class="col-md-3 mb-4">
                                <div class="card shadow-sm h-100">
                                    <img src="${b.imageUrl}"
                                         class="card-img-top"
                                         style="height:220px;object-fit:cover;">
                                    <div class="card-body">
                                        <h6>${b.title}</h6>
                                        <p class="text-muted">${b.author}</p>
                                        <a href="/Book/Details/${b.bookId}"
                                           class="btn btn-sm btn-secondary w-100">
                                            View Details
                                        </a>
                                    </div>
                                </div>
                            </div>`;
                        });
                    }

                    $("#searchResults").html(html);
                });

            }, 400);
        }

        $("#searchInput").on("keyup", loadSearch);

        document.addEventListener("DOMContentLoaded", function () {

            const searchBtn = document.getElementById("navSearchBtn");
            const searchInput = document.getElementById("searchInput");
            const searchSection = document.getElementById("topSearch");

            if (!searchBtn || !searchInput || !searchSection) return;

            searchBtn.addEventListener("click", function () {
                // Scroll to search bar
                searchSection.scrollIntoView({
                    behavior: "smooth",
                    block: "center"
                });

                // Focus input after scroll
                setTimeout(() => {
                    searchInput.focus();
                }, 500);
            });

        });

        function slideBooks(direction) {
            const slider = document.getElementById("bestSlider");
            slider.scrollBy({ left: direction * 450, behavior: 'smooth' });
        }

        function toggleWishlist(bookId, button) {
            fetch('/Wishlist/Toggle', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(bookId)
            })
            .then(res => res.json())
            .then(data => {
                const icon = button.querySelector('i');
                icon.classList.toggle('bi-heart-fill', data.added);
                icon.classList.toggle('bi-heart', !data.added);
            });
        }
    </script>
}
