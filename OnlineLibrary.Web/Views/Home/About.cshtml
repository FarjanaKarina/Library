@{
    ViewData["Title"] = "About Us";
    Layout = "_AppLayout";
}

<div class="about-hero">
    <div class="container">
        <div class="row align-items-center min-vh-75">
            <div class="col-lg-6">
                <div class="hero-content">
                    <h1 class="display-4 fw-bold mb-4">Welcome to <span class="text-primary">BookNest</span></h1>
                    <p class="lead mb-4">Your digital gateway to endless knowledge and literary adventures.</p>
                    <div class="hero-stats row text-center">
                        <div class="col-4">
                            <h3 class="stat-number text-primary" data-target="1000">0</h3>
                            <p class="small text-muted">Books Available</p>
                        </div>
                        <div class="col-4">
                            <h3 class="stat-number text-success" data-target="500">0</h3>
                            <p class="small text-muted">Happy Readers</p>
                        </div>
                        <div class="col-4">
                            <h3 class="stat-number text-info" data-target="50">0</h3>
                            <p class="small text-muted">Categories</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="hero-illustration">
                    <div class="floating-books">
                        <div class="book book-1">📚</div>
                        <div class="book book-2">📖</div>
                        <div class="book book-3">📘</div>
                        <div class="book book-4">📙</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Our Story Section -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <h2 class="mb-4 fade-in">Our Story</h2>
                <p class="lead fade-in">
                    Founded with a vision to democratize access to knowledge, BookNest bridges the gap
                    between traditional libraries and modern digital convenience.
                </p>
            </div>
        </div>

        <div class="row mt-5">
            <div class="col-md-4 text-center mb-4">
                <div class="feature-card fade-in">
                    <div class="feature-icon">
                        <i class="bi bi-lightning-charge-fill fs-1 text-warning"></i>
                    </div>
                    <h4>Lightning Fast</h4>
                    <p>Browse, order, and receive books with unprecedented speed and efficiency.</p>
                </div>
            </div>
            <div class="col-md-4 text-center mb-4">
                <div class="feature-card fade-in">
                    <div class="feature-icon">
                        <i class="bi bi-shield-check-fill fs-1 text-success"></i>
                    </div>
                    <h4>Secure & Trusted</h4>
                    <p>Your data and transactions are protected with enterprise-grade security.</p>
                </div>
            </div>
            <div class="col-md-4 text-center mb-4">
                <div class="feature-card fade-in">
                    <div class="feature-icon">
                        <i class="bi bi-heart-fill fs-1 text-danger"></i>
                    </div>
                    <h4>Community Driven</h4>
                    <p>Built by book lovers, for book lovers. Join our growing community today.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Simple Timeline -->
<section class="py-5">
    <div class="container">
        <h2 class="text-center mb-5 fade-in">Our Journey</h2>
        <div class="simple-timeline">
            <div class="timeline-step fade-in">
                <div class="step-year">2023</div>
                <div class="step-content">
                    <h4>The Beginning</h4>
                    <p>BookNest was conceptualized as a solution to make library management more efficient.</p>
                </div>
            </div>
            <div class="timeline-step fade-in">
                <div class="step-year">2024</div>
                <div class="step-content">
                    <h4>Digital Transformation</h4>
                    <p>Launched our online platform with integrated payment and delivery systems.</p>
                </div>
            </div>
            <div class="timeline-step fade-in">
                <div class="step-year">2025</div>
                <div class="step-content">
                    <h4>Community Growth</h4>
                    <p>Reached 500+ active readers and expanded our catalog to 1000+ books.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Call to Action -->
<section class="py-5 bg-primary text-white">
    <div class="container text-center">
        <h2 class="mb-4">Ready to Start Your Reading Journey?</h2>
        <p class="lead mb-4">Join thousands of book lovers who trust BookNest for their literary adventures.</p>
        <div class="cta-buttons">
            <a href="@Url.Action("Index", "Account")" class="btn btn-light btn-lg me-3">
                <i class="bi bi-person-plus me-2"></i>Join Now
            </a>
            <a href="@Url.Action("BrowseBooks", "Student")" class="btn btn-outline-light btn-lg">
                <i class="bi bi-book me-2"></i>Browse Books
            </a>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Animate statistics
            $('.stat-number').each(function() {
                const target = parseInt($(this).data('target'));
                const element = $(this);
                let current = 0;
                const increment = target / 50;

                const timer = setInterval(() => {
                    current += increment;
                    if (current >= target) {
                        element.text(target + '+');
                        clearInterval(timer);
                    } else {
                        element.text(Math.ceil(current));
                    }
                }, 40);
            });

            // Simple scroll animations
            $(window).scroll(function() {
                $('.fade-in').each(function() {
                    const elementTop = $(this).offset().top;
                    const scrollTop = $(window).scrollTop();
                    const windowHeight = $(window).height();

                    if (scrollTop + windowHeight > elementTop + 100) {
                        $(this).addClass('visible');
                    }
                });
            });

            // Simple floating animation
            setInterval(() => {
                $('.floating-books .book').each(function() {
                    const randomX = Math.random() * 15 - 7.5;
                    const randomY = Math.random() * 15 - 7.5;
                    $(this).css('transform', 'translate(' + randomX + 'px, ' + randomY + 'px)');
                });
            }, 2000);
        });
    </script>
}