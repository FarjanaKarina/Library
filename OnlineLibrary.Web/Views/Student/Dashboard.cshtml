@model OnlineLibrary.Web.Models.StudentDashboardViewModel

@{
    Layout = "_StudentLayout";
}

@{
    ViewData["Title"] = "Student Dashboard";
}

<div class="container mt-4">

    <h2>Welcome, @Model.FullName</h2>
    <p class="text-muted">@Model.Email</p>

    <hr />

    <a asp-action="BrowseBooks"
       class="btn btn-primary mb-3">
        Browse Books
    </a>


    <!-- MEMBERSHIP STATUS -->
    <div class="card mb-4">
        <div class="card-body">
            <h5>Membership Status</h5>

            <span class="badge bg-info">
                @Model.MembershipStatus
            </span>

            @if (Model.MembershipStatus == "Not Applied")
            {
                <div class="mt-3">
                    <a asp-action="ApplyMembership"
                       class="btn btn-primary">
                        Apply for Membership
                    </a>

                </div>
            }
        </div>
    </div>

    <!-- BORROW HISTORY -->
    <div class="card">
        <div class="card-body">
            <h5>Borrow History</h5>

            @if (!Model.BorrowHistory.Any())
            {
                <p class="text-muted">
                    No borrowing history found.
                </p>
            }
            else
            {
                <table class="table table-bordered mt-3">
                    <thead class="table-dark">
                        <tr>
                            <th>Book</th>
                            <th>Borrow Date</th>
                            <th>Due Date</th>
                            <th>Fine (TK)</th>
                            <th>Status</th>
                            <th>Action</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.BorrowHistory)
                        {
                            <tr>
                                <td>@item.BookTitle</td>
                                <td>@item.BorrowDate.ToString("yyyy-MM-dd")</td>
                                <td>@item.DueDate.ToString("yyyy-MM-dd")</td>
                                <td>
                                    @if (item.FineAmount > 0)
                                    {
                                        <span class="text-danger fw-bold">
                                            @item.FineAmount TK
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                            </td>

                            <td>
                                <span class="badge @(item.Status == "Overdue" ? "bg-danger" : 
                                                     item.Status == "Returned" ? "bg-secondary": "bg-success")">
                                @item.Status
                            </span>
                        </td>
                        <td>
                            <a asp-controller="Book"
                               asp-action="Details"
                               asp-route-id="@item.BookId"
                               class="btn btn-sm btn-info mb-1">
                                View Details
                            </a>

                            @if (item.Status == "Active" || item.Status == "Overdue")
                                    {
                                        <form asp-action="ReturnBook"
                                              method="post"
                                              style="display:inline">
                                            <input type="hidden"
                                                   name="borrowId"
                                                   value="@item.BorrowId" />

                                            <button class="btn btn-sm btn-warning">
                                                Return
                                            </button>
                                        </form>
                                    }
                                </td>

                    </tr>
                                        }
                    </tbody>
                </table>
            }
        </div>
    </div>

</div>
