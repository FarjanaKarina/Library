@model OnlineLibrary.Web.Models.StudentDashboardViewModel

@{
    Layout = "_StudentLayout";
    ViewData["Title"] = "Student Dashboard";
}

<div class="container mt-4">

    <h2>Welcome, @Model.FullName</h2>
    <p class="text-muted">@Model.Email</p>

    <hr />

    <!-- ORDER STATISTICS -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card bg-primary text-white">
                <div class="card-body text-center">
                    <h3>@Model.TotalOrders</h3>
                    <p class="mb-0">Total Orders</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-warning text-dark">
                <div class="card-body text-center">
                    <h3>@Model.ActiveOrders</h3>
                    <p class="mb-0">Active Orders</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-info text-white">
                <div class="card-body text-center">
                    <h3>@Model.PendingReturns</h3>
                    <p class="mb-0">Pending Returns</p>
                </div>
            </div>
        </div>
    </div>

    <!-- ACTION BUTTONS -->
    <div class="mb-4">
        <a asp-action="BrowseBooks" class="btn btn-primary">
            <i class="bi bi-book me-2"></i>Browse Books
        </a>
        <a asp-controller="Cart" asp-action="Index" class="btn btn-outline-primary">
            <i class="bi bi-cart me-2"></i>My Cart
        </a>
        <a asp-controller="Order" asp-action="MyOrders" class="btn btn-outline-secondary">
            <i class="bi bi-box me-2"></i>My Orders
        </a>
    </div>

    <!-- CONTINUE READING -->
    <hr />
    <h5><i class="bi bi-book-half me-2"></i>Continue Reading</h5>

    @if (Model.ContinueReading.Count == 0)
    {
        <p class="text-muted">No recent reading activity.</p>
    }
    else
    {
        <div class="row">
            @foreach (var book in Model.ContinueReading)
            {
                <div class="col-md-3 mb-3">
                    <div class="card shadow-sm h-100">
                        <img src="@(book.ImageUrl ?? "/images/default-book.png")"
                             class="card-img-top"
                             style="height:180px;object-fit:cover;"
                             alt="@book.Title"
                             onerror="this.src='/images/default-book.png'" />

                        <div class="card-body">
                            <h6 class="card-title text-truncate" title="@book.Title">@book.Title</h6>

                            <a asp-controller="Book"
                               asp-action="Details"
                               asp-route-id="@book.BookId"
                               class="btn btn-sm btn-primary w-100">
                                <i class="bi bi-book-half me-1"></i>Continue
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <!-- RECENT ORDERS -->
    <hr />
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="bi bi-receipt me-2"></i>Recent Orders</h5>
            <a asp-controller="Order" asp-action="MyOrders" class="btn btn-sm btn-outline-primary">
                View All
            </a>
        </div>
        <div class="card-body">
            @if (Model.RecentOrders.Count == 0)
            {
                <p class="text-muted mb-0">No orders found. <a asp-action="BrowseBooks">Start shopping!</a></p>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Transaction ID</th>
                                <th>Date</th>
                                <th>Items</th>
                                <th>Total</th>
                                <th>Status</th>
                                <th>Payment</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model.RecentOrders)
                            {
                                <tr>
                                    <td><code>@order.TransactionId</code></td>
                                    <td>@order.OrderDate.ToString("dd-MM-yyyy")</td>
                                    <td>@order.ItemCount</td>
                                    <td>
                                        <strong class="text-success">৳@order.TotalAmount.ToString("N0")</strong>
                                    </td>
                                    <td>
                                        @{
                                            var statusClass = order.OrderStatus switch
                                            {
                                                "Delivered" => "bg-success",
                                                "Shipped" => "bg-info",
                                                "Packed" => "bg-warning text-dark",
                                                "Confirmed" => "bg-primary",
                                                _ => "bg-secondary"
                                            };
                                        }
                                        <span class="badge @statusClass">@order.OrderStatus</span>
                                    </td>
                                    <td>
                                        @{
                                            var paymentClass = order.PaymentStatus switch
                                            {
                                                "Success" => "bg-success",
                                                "Pending" => "bg-warning text-dark",
                                                "Failed" => "bg-danger",
                                                _ => "bg-secondary"
                                            };
                                        }
                                        <span class="badge @paymentClass">@order.PaymentStatus</span>
                                    </td>
                                    <td>
                                        <a asp-controller="Order" asp-action="Details" asp-route-id="@order.OrderId"
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>

</div>