@{
    Layout = "_AppLayout";
    ViewData["Title"] = "Order Complete";

    var status = ViewBag.Status as string;
    var transactionId = ViewBag.TransactionId as string;
    var totalAmount = ViewBag.TotalAmount;
    var orderItems = ViewBag.OrderItems as dynamic;
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            @if (status == "success")
            {
                <div class="card shadow text-center">
                    <div class="card-body py-5">
                        <div class="mb-4">
                            <i class="bi bi-check-circle-fill text-success" style="font-size: 80px;"></i>
                        </div>
                        <h2 class="text-success mb-3">Order Confirmed!</h2>
                        <p class="text-muted mb-4">
                            Thank you for your order. Your books will be shipped soon.
                        </p>

                        <div class="bg-light rounded p-3 mb-4">
                            <div class="row text-start">
                                <div class="col-6">
                                    <small class="text-muted">Transaction ID</small>
                                    <p class="mb-0 fw-bold">@transactionId</p>
                                </div>
                                <div class="col-6 text-end">
                                    <small class="text-muted">Total Amount</small>
                                    <p class="mb-0 fw-bold text-primary">৳@totalAmount?.ToString("N0")</p>
                                </div>
                            </div>
                        </div>

                        @if (orderItems != null)
                        {
                            <div class="text-start mb-4">
                                <h6>Order Items:</h6>
                                <ul class="list-group list-group-flush">
                                    @foreach (var item in orderItems)
                                    {
                                        <li class="list-group-item d-flex justify-content-between">
                                            <span>@item.BookTitle × @item.Quantity</span>
                                            <span>৳@((item.Price * item.Quantity).ToString("N0"))</span>
                                        </li>
                                    }
                                </ul>
                            </div>
                        }

                        <div class="d-grid gap-2">
                            <a href="@Url.Action("MyOrders", "Order")" class="btn btn-primary">
                                <i class="bi bi-box me-2"></i>View My Orders
                            </a>
                            <a href="@Url.Action("BrowseBooks", "Student")" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Continue Shopping
                            </a>
                        </div>
                    </div>
                </div>
            }
            else if (status == "fail")
            {
                <div class="card shadow text-center">
                    <div class="card-body py-5">
                        <div class="mb-4">
                            <i class="bi bi-x-circle-fill text-danger" style="font-size: 80px;"></i>
                        </div>
                        <h2 class="text-danger mb-3">Payment Failed</h2>
                        <p class="text-muted mb-4">
                            Your payment could not be processed. Please try again.
                        </p>
                        <p><small class="text-muted">Transaction ID: @transactionId</small></p>

                        <div class="d-grid gap-2">
                            <a href="@Url.Action("Index", "Cart")" class="btn btn-primary">
                                <i class="bi bi-arrow-repeat me-2"></i>Try Again
                            </a>
                            <a href="@Url.Action("Dashboard", "Student")" class="btn btn-outline-secondary">
                                Go to Dashboard
                            </a>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="card shadow text-center">
                    <div class="card-body py-5">
                        <div class="mb-4">
                            <i class="bi bi-dash-circle-fill text-warning" style="font-size: 80px;"></i>
                        </div>
                        <h2 class="text-warning mb-3">Payment Cancelled</h2>
                        <p class="text-muted mb-4">
                            You cancelled the payment. Your cart items are still saved.
                        </p>

                        <div class="d-grid gap-2">
                            <a href="@Url.Action("Index", "Cart")" class="btn btn-primary">
                                <i class="bi bi-cart me-2"></i>Return to Cart
                            </a>
                            <a href="@Url.Action("Dashboard", "Student")" class="btn btn-outline-secondary">
                                Go to Dashboard
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>