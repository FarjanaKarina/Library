<div class="modal-header">
    <h5 class="modal-title">Apply for Membership</h5>
    <button class="btn-close" data-bs-dismiss="modal"></button>
</div>

<div class="modal-body">

    <p class="text-muted">
        Choose a membership plan to borrow books.
    </p>

    <form asp-action="ApplyMembershipConfirm" method="post">

        <div class="mb-3">
            <label class="form-label">Select Plan</label>
            <select name="duration"
                    class="form-select"
                    required>
                <option value="">-- Select --</option>
                <option value="1">1 Month — 300 TK</option>
                <option value="2">2 Months — 550 TK</option>
                <option value="3">3 Months — 800 TK</option>
            </select>
        </div>

        <div class="mb-3">
            <label class="form-label">Payment Method</label>
            <select class="form-select">
                <option>Mobile Banking</option>
                <option>Card</option>
                <option>Cash (Library)</option>
            </select>
        </div>

        <button class="btn btn-success w-100">
            Pay & Apply
        </button>
    </form>
</div>
