    <!-- =========================
         MAIN CONTENT
    ========================== -->
    <!-- TOP NAVBAR -->
    @await Html.PartialAsync("_TopNavbar")
<!-- AUTH MODAL -->
    <div class="modal fade"
         id="authModal"
         tabindex="-1"
         data-bs-backdrop="true"
         data-bs-keyboard="true">
        <div class="modal-dialog modal-dialog-centered modal-md">
            <div class="modal-content" id="authModalContent">
            <!-- Partial view loads here -->

            </div>
        </div>
    </div>
    
    <!-- Back to Top Button -->
    <button id="backToTop"
            class="back-to-top"
            aria-label="Back to top">
        <i class="bi bi-arrow-up"></i>
    </button>

    <main class="flex-fill" style="margin-top:70px;">
        @RenderBody()
    </main>

    <!-- =========================
         FOOTER
    ========================== -->
    
    @{
        var roleId = Context.Session.GetString("RoleId");
        bool showFooter = string.IsNullOrEmpty(roleId);
    }

    @if (showFooter)
    {
        @await Html.PartialAsync("_Footer")
    }


    <!-- =========================
         SCRIPTS
    ========================== -->
    <script src="~/js/site.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Multiple Category Select2 CSS -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>


    <script>
        function toggleDarkMode() {
            document.body.classList.toggle("dark-mode");
            localStorage.setItem("darkMode",
                document.body.classList.contains("dark-mode"));
        }

        if (localStorage.getItem("darkMode") === "true") {
            document.body.classList.add("dark-mode");
        }
    </script>
    <script>
        window.addEventListener("scroll", function () {
            const searchIcon = document.getElementById("navSearchIcon");

            if (!searchIcon) return;

            if (window.scrollY > 200) {
                searchIcon.classList.remove("d-none");
            } else {
                searchIcon.classList.add("d-none");
            }
        });
    </script>
    <script>
        const backToTopBtn = document.getElementById("backToTop");

        window.addEventListener("scroll", () => {
            if (window.scrollY > 300) {
                backToTopBtn.style.display = "flex";
            } else {
                backToTopBtn.style.display = "none";
            }
        });

        backToTopBtn.addEventListener("click", () => {
            window.scrollTo({
                top: 0,
                behavior: "smooth"
            });
        });
    </script>
    <script>
        function openLoginModal() {
            fetch('/Account/LoginModal')
                .then(r => r.text())
                .then(html => {
                    document.getElementById('authModalContent').innerHTML = html;
                    new bootstrap.Modal(document.getElementById('authModal')).show();
                });
        }

        function openRegisterModal() {
            fetch('/Account/RegisterModal')
                .then(r => r.text())
                .then(html => {
                    document.getElementById('authModalContent').innerHTML = html;
                    new bootstrap.Modal(document.getElementById('authModal')).show();
                });
        }

        document.addEventListener('click', function (e) {
            if (e.target.id === 'openRegisterModal') {
                e.preventDefault();
                openRegisterModal();
            }
            if (e.target.id === 'openLoginModal') {
                e.preventDefault();
                openLoginModal();
            }
        });
    </script>
    <script>
        const authModalEl = document.getElementById('authModal');

        authModalEl.addEventListener('hide.bs.modal', function (event) {

            // If modal closed by clicking outside (backdrop)
            if (event.target === authModalEl &&
                document.activeElement === document.body) {

                window.location.href = '/';
            }
        });
    </script>
   
   @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
