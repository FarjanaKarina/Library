@model OnlineLibrary.Web.Models.BookDetailsViewModel

@{
    ViewData["Title"] = "Book Details";
    Layout = "_AppLayout";
}

<div class="container mt-4">

    <div class="row">

        <!-- IMAGE -->
        <div class="col-md-4 text-center">
            <img src="@Model.ImageUrl"
                 class="img-fluid rounded shadow"
                 style="max-height:400px; object-fit:cover;" />
        </div>

        <!-- DETAILS -->
        <div class="col-md-8">

            <h2>@Model.Title</h2>
            <p class="text-muted mb-1">
                by <strong>@Model.Author</strong>
            </p>

            <p>
                <div class="mb-3">
                    <strong>Categories:</strong><br />

                    @if (Model.Categories.Any())
                    {
                        @foreach (var cat in Model.Categories)
                        {
                            <span class="badge bg-info text-dark me-1">
                                @cat
                            </span>
                        }
                    }
                    else
                    {
                        <span class="text-muted">No category assigned</span>
                    }
                </div>

            </p>

            <p>
                <strong>Publisher:</strong> @Model.Publisher
            </p>

            <p>
                <strong>ISBN:</strong> @Model.ISBN
            </p>

            <p>
                <strong>Published:</strong>
                @Model.PublishDate.ToString("dd-MM-yyyy")
            </p>

            <p>
                <strong>Price:</strong>
                @Model.Price.ToString("0.00") TK
            </p>

            <p>
                <strong>Available Copies:</strong>
                @Model.TotalCopies
            </p>

            <hr />

            <p>
                @Model.Description
            </p>

            <div class="mt-4 d-flex gap-2 flex-wrap align-items-center">

                <!-- READ ONLINE (STUDENT, ADMIN, LIBRARIAN) -->
                @if (!string.IsNullOrEmpty(Model.PdfUrl))
                {
                    if (ViewBag.IsLoggedIn == true &&
                    (ViewBag.CurrentRole == "Student"
                    || ViewBag.CurrentRole == "Admin"
                    || ViewBag.CurrentRole == "Librarian"))
                    {
                        <button class="btn btn-outline-primary"
                                data-bs-toggle="modal"
                                data-bs-target="#pdfModal">
                            <i class="bi bi-book"></i> Read Online
                        </button>
                    }
                    else
                    {
                        <a asp-controller="Account"
                           asp-action="Login"
                           class="btn btn-outline-primary">
                            <i class="bi bi-lock"></i> Read Online
                        </a>
                    }
                }

                <!-- BUY NOW (STUDENT ONLY – ALWAYS VISIBLE) -->
                @if (ViewBag.CurrentRole == "Student")
                {
                    <form asp-controller="Purchase" asp-action="Buy" method="post" style="display:inline;">
                        <input type="hidden" name="bookId" value="@Model.BookId" />
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-cart-check"></i> Buy Now - @Model.Price.ToString("0.00") TK
                        </button>
                    </form>
                }

                <!-- BACK BUTTON -->
                @if (ViewBag.CurrentRole == "Admin" || ViewBag.CurrentRole == "Librarian")
                {
                    <a asp-controller="Book"
                       asp-action="Index"
                       class="btn btn-secondary ms-auto">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                }
                else
                {
                    <button class="btn btn-secondary ms-auto"
                            onclick="history.back()">
                        <i class="bi bi-arrow-left"></i> Back
                    </button>
                }

            </div>

        </div>
    </div>
</div>
@if (!string.IsNullOrEmpty(Model.PdfUrl))
{
    <div class="modal fade" id="pdfModal" tabindex="-1">
        <div class="modal-dialog modal-xl modal-dialog-centered">
            <div class="modal-content">

                <div class="modal-header">
                    <h5 class="modal-title">Read Book</h5>
                    <button class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <!-- ✅ MODAL BODY -->
                <div class="modal-body position-relative p-0" style="height:80vh;">

                    <!-- WATERMARK -->
                    <div class="pdf-watermark">
                        BookNest • For Reading Only
                    </div>

                    <!-- PDF IFRAME -->
                    <iframe src="/Book/ReadPdf/@Model.BookId#toolbar=0&navpanes=0&scrollbar=0"
                            width="100%"
                            height="100%"
                            style="border:none;">
                    </iframe>

                </div>

            </div>
        </div>
    </div>
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        // Context menu and keyboard shortcut prevention for PDF
    </script>
    <script>
        document.addEventListener("contextmenu", function (e) {
            if (document.getElementById("pdfModal")?.classList.contains("show")) {
                e.preventDefault();
            }
        });

        document.addEventListener("keydown", function (e) {
            if (document.getElementById("pdfModal")?.classList.contains("show")) {
                if (e.ctrlKey && (e.key === 'p' || e.key === 's')) {
                    e.preventDefault();
                }
            }
        });
    </script>

}
