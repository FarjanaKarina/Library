@model OnlineLibrary.Web.Models.BookDetailsViewModel

@{
    ViewData["Title"] = "Book Details";
    Layout = "_Layout";
}

<div class="container mt-4">

    <div class="row">

        <!-- IMAGE -->
        <div class="col-md-4 text-center">
            <img src="@Model.ImageUrl"
                 class="img-fluid rounded shadow"
                 style="max-height:400px; object-fit:cover;" />
        </div>

        <!-- DETAILS -->
        <div class="col-md-8">

            <h2>@Model.Title</h2>
            <p class="text-muted mb-1">
                by <strong>@Model.Author</strong>
            </p>

            <p>
                <strong>Category:</strong> @Model.CategoryName
            </p>

            <p>
                <strong>Publisher:</strong> @Model.Publisher
            </p>

            <p>
                <strong>ISBN:</strong> @Model.ISBN
            </p>

            <p>
                <strong>Published:</strong>
                @Model.PublishDate.ToString("yyyy-MM-dd")
            </p>

            <p>
                <strong>Price:</strong>
                @Model.Price.ToString("0.00") TK
            </p>

            <p>
                <strong>Available Copies:</strong>
                @Model.TotalCopies
            </p>

            <hr />

            <p>
                @Model.Description
            </p>

            <div class="mt-4">
                <a asp-controller="Borrow"
                   asp-action="Create"
                   asp-route-bookId="@Model.BookId"
                   class="btn btn-primary">
                    Borrow Book
                </a>

                <a asp-controller="Home"
                   asp-action="Index"
                   class="btn btn-secondary ms-2">
                    Back
                </a>
            </div>

        </div>
    </div>
</div>
