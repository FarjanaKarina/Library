@model OnlineLibrary.Web.Models.MyOrdersViewModel

@{
    Layout = "_StudentLayout";
    ViewData["Title"] = "My Orders";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-box-seam me-2"></i>My Orders</h2>
        <a asp-controller="Student" asp-action="BrowseBooks" class="btn btn-primary">
            <i class="bi bi-plus-circle me-2"></i>Continue Shopping
        </a>
    </div>

    @if (Model.Orders.Count == 0)
    {
        <div class="alert alert-info text-center">
            <i class="bi bi-info-circle me-2"></i>You haven't placed any orders yet.
            <a asp-controller="Student" asp-action="BrowseBooks" class="alert-link">Start shopping!</a>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var order in Model.Orders)
            {
                <div class="col-lg-12 mb-3">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <div class="row align-items-center">
                                <!-- Order Info -->
                                <div class="col-md-3">
                                    <small class="text-muted">Order ID</small>
                                    <p class="mb-1"><code>@order.TransactionId</code></p>
                                    <small class="text-muted">@order.OrderDate.ToString("dd MMM yyyy, hh:mm tt")</small>
                                </div>

                                <!-- Items & Amount -->
                                <div class="col-md-2 text-center">
                                    <small class="text-muted">Items</small>
                                    <p class="mb-0"><strong>@order.TotalItems</strong></p>
                                </div>

                                <div class="col-md-2 text-center">
                                    <small class="text-muted">Total Amount</small>
                                    <p class="mb-0"><strong class="text-success">৳@order.TotalAmount.ToString("N0")</strong></p>
                                </div>

                                <!-- Status -->
                                <div class="col-md-3 text-center">
                                    <div class="mb-2">
                                        @{
                                            var orderStatusClass = order.OrderStatus switch
                                            {
                                                "Delivered" => "bg-success",
                                                "Shipped" => "bg-info",
                                                "Packed" => "bg-warning text-dark",
                                                "Confirmed" => "bg-primary",
                                                _ => "bg-secondary"
                                            };
                                        }
                                        <span class="badge @orderStatusClass">@order.OrderStatus</span>
                                    </div>
                                    <div>
                                        @{
                                            var paymentStatusClass = order.PaymentStatus switch
                                            {
                                                "Success" => "bg-success",
                                                "Pending" => "bg-warning text-dark",
                                                "Failed" => "bg-danger",
                                                _ => "bg-secondary"
                                            };
                                        }
                                        <span class="badge @paymentStatusClass">@order.PaymentStatus</span>
                                    </div>
                                </div>

                                <!-- Actions -->
                                <div class="col-md-2 text-end">
                                    <a asp-action="Details" asp-route-id="@order.OrderId" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-eye"></i> View Details
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>