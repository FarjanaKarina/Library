@model OnlineLibrary.Web.Models.OrderDetailsViewModel

@{
    Layout = "_StudentLayout";
    ViewData["Title"] = "Order Details";
}

<div class="container mt-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-receipt me-2"></i>Order Details</h2>
        <a asp-action="MyOrders" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Back to Orders
        </a>
    </div>

    <div class="row">
        <!-- Left Column: Order Info -->
        <div class="col-lg-8">
            <!-- Order Tracking Status -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-truck me-2"></i>Order Tracking</h5>
                </div>
                <div class="card-body py-4">
                    <div class="order-tracking">
                        @{
                            var statuses = new[] { "Confirmed", "Packed", "Shipped", "Delivered" };
                            var currentStatusIndex = Array.IndexOf(statuses, Model.OrderStatus);
                        }

                        <div class="tracking-container">
                            @for (int i = 0; i < statuses.Length; i++)
                            {
                                var status = statuses[i];
                                var isCompleted = i <= currentStatusIndex;
                                var isCurrent = i == currentStatusIndex;

                                <div class="tracking-step @(isCompleted ? "completed" : "") @(isCurrent ? "current" : "")">
                                    <div class="tracking-icon">
                                        @if (isCompleted)
                                        {
                                            <i class="bi bi-check-circle-fill"></i>
                                        }
                                        else
                                        {
                                            <i class="bi bi-circle"></i>
                                        }
                                    </div>
                                    <div class="tracking-label">@status</div>
                                </div>

                                @if (i < statuses.Length - 1)
                                {
                                    <div class="tracking-line @(i < currentStatusIndex ? "completed" : "")"></div>
                                }
                            }
                        </div>

                        <div class="text-center mt-3">
                            <small class="text-muted">
                                Current Status: <strong class="text-primary">@Model.OrderStatus</strong>
                            </small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Order Items -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-box me-2"></i>Order Items</h5>
                </div>
                <div class="card-body p-0">
                    @foreach (var item in Model.Items)
                    {
                        <div class="p-3 border-bottom">
                            <div class="row align-items-center">
                                <div class="col-md-5">
                                    <div class="d-flex align-items-center">
                                        <img src="@(item.ImageUrl ?? "/images/default-book.png")"
                                             alt="@item.BookTitle"
                                             class="rounded me-3"
                                             style="width: 60px; height: 80px; object-fit: cover;">
                                        <div>
                                            <h6 class="mb-1">@item.BookTitle</h6>
                                            <small class="text-muted">৳@item.Price.ToString("N0") × @item.Quantity</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-2 text-center">
                                    <strong>৳@item.Subtotal.ToString("N0")</strong>
                                </div>
                                <div class="col-md-5">
                                    @* Return Status Progress *@
                                    @if (item.Status == "Active" && Model.OrderStatus == "Delivered")
                                    {
                                        <button class="btn btn-sm btn-outline-warning btn-request-return"
                                                data-item-id="@item.OrderItemId"
                                                data-book-title="@item.BookTitle">
                                            <i class="bi bi-arrow-return-left me-1"></i>Request Return
                                        </button>
                                    }
                                    else if (item.Status == "ReturnRequested")
                                    {
                                        <div class="return-progress">
                                            <div class="d-flex align-items-center mb-2">
                                                <span class="badge bg-warning text-dark me-2">Return Requested</span>
                                                <button class="btn btn-sm btn-outline-danger btn-cancel-return"
                                                        data-item-id="@item.OrderItemId">
                                                    <i class="bi bi-x"></i> Cancel
                                                </button>
                                            </div>
                                            <div class="progress" style="height: 6px;">
                                                <div class="progress-bar bg-warning" style="width: 25%"></div>
                                            </div>
                                            <small class="text-muted">Waiting for librarian approval</small>
                                        </div>
                                    }
                                    else if (item.Status == "ReturnApproved")
                                    {
                                        <div class="return-progress">
                                            <span class="badge bg-info mb-2">Return Approved</span>
                                            <div class="progress" style="height: 6px;">
                                                <div class="progress-bar bg-info" style="width: 50%"></div>
                                            </div>
                                            <small class="text-muted">Rider will pick up your book</small>
                                        </div>
                                    }
                                    else if (item.Status == "Received")
                                    {
                                        <div class="return-progress">
                                            <span class="badge bg-primary mb-2">Book Received</span>
                                            <div class="progress" style="height: 6px;">
                                                <div class="progress-bar bg-primary" style="width: 75%"></div>
                                            </div>
                                            <small class="text-muted">Refund processing...</small>
                                        </div>
                                    }
                                    else if (item.Status == "Refunded")
                                    {
                                        <div class="return-progress">
                                            <span class="badge bg-success mb-2">
                                                <i class="bi bi-check-circle me-1"></i>Refunded
                                            </span>
                                            <div class="progress" style="height: 6px;">
                                                <div class="progress-bar bg-success" style="width: 100%"></div>
                                            </div>
                                            <div class="mt-2 p-2 bg-success bg-opacity-10 rounded">
                                                <strong class="text-success">৳@item.RefundAmount?.ToString("N0")</strong>
                                                <small class="text-muted d-block">Refunded on @item.RefundedAt?.ToString("dd MMM yyyy")</small>
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@item.Status</span>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Shipping Info -->
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-geo-alt me-2"></i>Shipping Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p class="mb-2"><strong>Name:</strong> @Model.ShippingName</p>
                            <p class="mb-2"><strong>Phone:</strong> @Model.ShippingPhone</p>
                        </div>
                        <div class="col-md-6">
                            <p class="mb-2"><strong>Address:</strong></p>
                            <p class="text-muted">@Model.ShippingAddress</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Column: Summary -->
        <div class="col-lg-4">
            <!-- Order Summary -->
            <div class="card shadow-sm mb-3">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-file-text me-2"></i>Order Summary</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <small class="text-muted">Transaction ID</small>
                        <p class="mb-0"><code>@Model.TransactionId</code></p>
                    </div>
                    <div class="mb-3">
                        <small class="text-muted">Order Date</small>
                        <p class="mb-0">@Model.OrderDate.ToString("dd MMM yyyy, hh:mm tt")</p>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Subtotal</span>
                        <strong>৳@Model.TotalAmount.ToString("N0")</strong>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Shipping</span>
                        <span class="text-success">Free</span>
                    </div>
                    @{
                        var totalRefunded = Model.Items.Where(i => i.RefundAmount.HasValue).Sum(i => i.RefundAmount ?? 0);
                    }
                    @if (totalRefunded > 0)
                    {
                        <div class="d-flex justify-content-between mb-2 text-success">
                            <span>Refunded</span>
                            <strong>-৳@totalRefunded.ToString("N0")</strong>
                        </div>
                    }
                    <hr>
                    <div class="d-flex justify-content-between">
                        <strong>Total</strong>
                        <strong class="text-primary fs-5">৳@((Model.TotalAmount - totalRefunded).ToString("N0"))</strong>
                    </div>
                </div>
            </div>

            <!-- Payment Info -->
            @if (Model.PaymentStatus == "Success")
            {
                <div class="card shadow-sm mb-3">
                    <div class="card-header bg-success text-white">
                        <h6 class="mb-0"><i class="bi bi-credit-card me-2"></i>Payment Info</h6>
                    </div>
                    <div class="card-body">
                        @if (!string.IsNullOrEmpty(Model.BankTransactionId))
                        {
                            <p class="mb-2"><small class="text-muted">Bank TXN ID:</small><br><code>@Model.BankTransactionId</code></p>
                        }
                        @if (!string.IsNullOrEmpty(Model.CardType))
                        {
                            <p class="mb-2"><small class="text-muted">Payment Method:</small><br>@Model.CardType</p>
                        }
                        @if (Model.PaymentDate.HasValue)
                        {
                            <p class="mb-0"><small class="text-muted">Paid On:</small><br>@Model.PaymentDate.Value.ToString("dd MMM yyyy, hh:mm tt")</p>
                        }
                    </div>
                </div>
            }

            <!-- Return Policy -->
            <div class="card border-info">
                <div class="card-body">
                    <h6><i class="bi bi-arrow-repeat me-2 text-info"></i>Return Policy</h6>
                    <ul class="small text-muted mb-0">
                        <li>Returns accepted after delivery</li>
                        <li>Get <strong class="text-success">50% refund</strong> on returns</li>
                        <li>Rider will pick up the book</li>
                        <li>Refund processed after book received</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Return Request Modal -->
<div class="modal fade" id="returnRequestModal" tabindex="-1" aria-labelledby="returnRequestModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-warning">
                <h5 class="modal-title" id="returnRequestModalLabel"><i class="bi bi-arrow-return-left me-2"></i>Request Book Return</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-info py-2">
                    <small><i class="bi bi-info-circle me-1"></i> You will receive a <strong>50% refund</strong> once the book is received and verified.</small>
                </div>
                
                <form id="returnForm">
                    <input type="hidden" id="modalOrderItemId" name="orderItemId">
                    <div class="mb-3">
                        <label class="form-label">Book</label>
                        <input type="text" id="modalBookTitle" class="form-control" readonly>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Refund Payment Method</label>
                        <select class="form-select" id="refundPaymentMethod" name="paymentMethod" required>
                            <option value="">Select Method</option>
                            <option value="bKash">bKash</option>
                            <option value="Nagad">Nagad</option>
                            <option value="Rocket">Rocket</option>
                            <option value="Bank Transfer">Bank Transfer</option>
                        </select>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Account Number / Wallet ID</label>
                        <input type="text" class="form-control" id="refundAccountNumber" name="accountNumber" placeholder="e.g. 017XXXXXXXX" required>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-warning" id="btnConfirmReturn">Submit Return Request</button>
            </div>
        </div>
    </div>
</div>

<div class="mb-5 pb-5"></div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Request Return - Open Modal
            $('.btn-request-return').click(function () {
                const itemId = $(this).data('item-id');
                const bookTitle = $(this).data('book-title');
                
                $('#modalOrderItemId').val(itemId);
                $('#modalBookTitle').val(bookTitle);
                
                const returnModal = new bootstrap.Modal(document.getElementById('returnRequestModal'));
                returnModal.show();
            });

            // Confirm Return Request
            $('#btnConfirmReturn').click(function () {
                const formData = {
                    orderItemId: $('#modalOrderItemId').val(),
                    accountNumber: $('#refundAccountNumber').val(),
                    paymentMethod: $('#refundPaymentMethod').val()
                };

                if (!formData.paymentMethod || !formData.accountNumber) {
                    alert('Please fill in all refund details.');
                    return;
                }

                $(this).prop('disabled', true).html('<span class="spinner-border spinner-border-sm me-1"></span>Submitting...');

                $.post('@Url.Action("RequestReturn", "Order")', formData, function (res) {
                    if (res.success) {
                        alert('Return requested! You will be notified when approved.');
                        location.reload();
                    } else {
                        alert(res.message || 'Failed to request return.');
                        $('#btnConfirmReturn').prop('disabled', false).html('Submit Return Request');
                    }
                }).fail(function () {
                    alert('Error: Server responded with an error. Please try again.');
                    $('#btnConfirmReturn').prop('disabled', false).html('Submit Return Request');
                });
            });

            // Cancel Return
            $('.btn-cancel-return').click(function () {
                const itemId = $(this).data('item-id');

                if (confirm('Cancel this return request?')) {
                    $.post('@Url.Action("CancelReturn", "Order")', { orderItemId: itemId }, function (res) {
                        if (res.success) {
                            alert('Return request cancelled.');
                            location.reload();
                        } else {
                            alert(res.message || 'Failed to cancel.');
                        }
                    });
                }
            });
        });
    </script>
}

<style>
    .return-progress {
        padding: 8px;
        background: #f8f9fa;
        border-radius: 8px;
    }

    /* Order Tracking Styles */
    .tracking-container {
        display: flex;
        align-items: center;
        justify-content: space-between;
        max-width: 600px;
        margin: 0 auto;
    }

    .tracking-step {
        display: flex;
        flex-direction: column;
        align-items: center;
        z-index: 2;
    }

    .tracking-icon {
        width: 45px;
        height: 45px;
        border-radius: 50%;
        background: #e9ecef;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 20px;
        color: #6c757d;
        border: 3px solid #e9ecef;
    }

    .tracking-step.completed .tracking-icon {
        background: #28a745;
        color: white;
        border-color: #28a745;
    }

    .tracking-step.current .tracking-icon {
        background: #007bff;
        color: white;
        border-color: #007bff;
        animation: pulse 2s infinite;
    }

    @@keyframes pulse {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.1); }
    }

    .tracking-label {
        margin-top: 8px;
        font-size: 12px;
        font-weight: 600;
        color: #6c757d;
    }

    .tracking-step.completed .tracking-label { color: #28a745; }
    .tracking-step.current .tracking-label { color: #007bff; }

    .tracking-line {
        flex: 1;
        height: 4px;
        background: #e9ecef;
        margin: 0 -5px;
        z-index: 1;
    }

    .tracking-line.completed { background: #28a745; }
</style>