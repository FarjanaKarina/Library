@model IEnumerable<OnlineLibrary.Infrastructure.Domain.Entities.Notification>
@using OnlineLibrary.Infrastructure.Helpers

@{
    Layout = "_AppLayout";
    ViewData["Title"] = "Notifications";
}

<h2>Notifications</h2>

@if (!Model.Any())
{
    <p class="text-muted">No notifications.</p>
}
else
{
    <ul class="list-group">
        @foreach (var n in Model)
        {
            <li class="list-group-item @(n.IsRead ? "notification-read" : "notification-unread")">

                <strong>@n.Title</strong>

                <p class="mb-1">@n.Message</p>

                <small class="text-muted">
                    @TimeAgoHelper.TimeAgo(n.CreatedAt)
                </small>

            </li>
        }
    </ul>
}
