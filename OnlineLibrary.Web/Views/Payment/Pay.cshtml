@{
    Layout = "_StudentLayout";
}

<div class="container mt-5" style="max-width:500px">

    <h3>Mock Payment</h3>
    <p class="text-muted">
        This is a simulated payment page for practicum purposes.
    </p>

    <hr />

    <dl class="row">
        <dt class="col-5">Purpose</dt>
        <dd class="col-7">@ViewBag.Purpose</dd>

        <dt class="col-5">Amount</dt>
        <dd class="col-7">@ViewBag.Amount TK</dd>
    </dl>

    <form asp-action="Confirm" method="post">
        <input type="hidden" name="purpose" value="@ViewBag.Purpose" />
        <input type="hidden" name="amount" value="@ViewBag.Amount" />

        <button class="btn btn-success w-100">
            Confirm Payment
        </button>
    </form>

    <div class="text-center mt-3">
        <a asp-controller="Student"
           asp-action="Dashboard"
           class="btn btn-secondary">
            Cancel
        </a>
    </div>

</div>
