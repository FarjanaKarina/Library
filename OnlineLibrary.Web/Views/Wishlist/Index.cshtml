@using OnlineLibrary.Infrastructure.Domain.Entities
@model IEnumerable<Book>

@{
    ViewData["Title"] = "My Wishlist";
    Layout = "_StudentLayout";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-heart-fill text-danger me-2"></i>My Wishlist</h2>
        <span class="badge bg-secondary fs-6">@Model.Count() items</span>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-heart text-muted" style="font-size: 4rem;"></i>
            <h4 class="mt-3 text-muted">Your wishlist is empty</h4>
            <p class="text-muted">Start adding books you love!</p>
            <a asp-controller="Student" asp-action="BrowseBooks" class="btn btn-primary">
                <i class="bi bi-book me-2"></i>Browse Books
            </a>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var book in Model)
            {
                <div class="col-xl-3 col-lg-4 col-md-6 mb-4">
                    <div class="card h-100 shadow-sm wishlist-card">
                        <!-- Image -->
                        <div class="position-relative wishlist-img-container">
                            <a asp-controller="Book" asp-action="Details" asp-route-id="@book.BookId">
                                <img src="@(book.ImageUrl ?? "/images/default-book.png")" 
                                     class="card-img-top" 
                                     alt="@book.Title"
                                     style="height: 220px; object-fit: cover;">
                            </a>
                            
                            <!-- Remove from Wishlist Button -->
                            <button class="btn btn-sm btn-danger position-absolute top-0 end-0 m-2 rounded-circle"
                                    onclick="removeFromWishlist('@book.BookId')"
                                    title="Remove from Wishlist"
                                    style="width: 36px; height: 36px;">
                                <i class="bi bi-x-lg"></i>
                            </button>
                        </div>

                        <!-- Card Body -->
                        <div class="card-body d-flex flex-column">
                            <h6 class="card-title text-truncate mb-1" title="@book.Title">
                                @book.Title
                            </h6>
                            <p class="text-muted small mb-2">
                                <i class="bi bi-person me-1"></i>@book.Author
                            </p>
                            
                            <!-- Price -->
                            <div class="d-flex align-items-center mb-3">
                                <span class="fs-5 fw-bold text-primary">৳@book.Price.ToString("N0")</span>
                                @if (book.TotalCopies > 0)
                                {
                                    <span class="badge bg-success ms-auto">In Stock</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger ms-auto">Out of Stock</span>
                                }
                            </div>

                            <!-- Action Buttons -->
                            <div class="mt-auto d-grid gap-2">
                                <button class="btn btn-primary" 
                                        onclick="addToCart('@book.BookId')"
                                        @(book.TotalCopies <= 0 ? "disabled" : "")>
                                    <i class="bi bi-cart-plus me-2"></i>Add to Cart
                                </button>
                                <a asp-controller="Book" asp-action="Details" asp-route-id="@book.BookId" 
                                   class="btn btn-outline-secondary btn-sm">
                                    <i class="bi bi-info-circle me-1"></i>View Details
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <script>
        function addToCart(bookId) {
            $.post('/Cart/Add', { bookId: bookId, quantity: 1 }, function (res) {
                if (res.success) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Added to Cart!',
                        text: res.message,
                        showConfirmButton: false,
                        timer: 1500
                    });
                    // Update cart count in navbar
                    if (res.cartCount) {
                        $('.cart-count').text(res.cartCount);
                    }
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Oops...',
                        text: res.message
                    });
                }
            }).fail(function () {
                Swal.fire({
                    icon: 'warning',
                    title: 'Please Log In',
                    text: 'You need to log in to add items to cart'
                });
            });
        }

        function removeFromWishlist(bookId) {
            Swal.fire({
                title: 'Remove from Wishlist?',
                text: 'This book will be removed from your wishlist.',
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#dc3545',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Yes, remove it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.post('/Wishlist/Toggle', { bookId: bookId }, function (res) {
                        if (!res.added) {
                            Swal.fire({
                                icon: 'success',
                                title: 'Removed!',
                                text: 'Book removed from wishlist.',
                                showConfirmButton: false,
                                timer: 1000
                            });
                            setTimeout(() => location.reload(), 1000);
                        }
                    });
                }
            });
        }
    </script>
}

<style>
    .wishlist-card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        border: none;
        border-radius: 12px;
        overflow: hidden;
    }

    .wishlist-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 12px 24px rgba(0, 0, 0, 0.15) !important;
    }

    .wishlist-img-container {
        overflow: hidden;
    }

    .wishlist-card .card-title {
        font-weight: 600;
    }
</style>
