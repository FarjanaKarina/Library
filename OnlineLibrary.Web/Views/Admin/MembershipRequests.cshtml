@model IEnumerable<MembershipRequestViewModel>

<h2>Membership Requests</h2>

<table class="table table-bordered">
    <thead class="table-dark">
        <tr>
            <th>User</th>
            <th>Email</th>
            <th>Status</th>
            <th>Applied At</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FullName</td>
                <td>@item.Email</td>
                <td>
                    <span class="badge bg-warning">@item.Status</span>
                </td>
                <td>@item.AppliedAt.ToString("dd-MM-yyyy")</td>
                <td>
                    <form asp-action="ApproveMembership" method="post" class="d-inline">
                        <input type="hidden" name="membershipId" value="@item.MembershipId" />
                        <button class="btn btn-success btn-sm">Approve</button>
                    </form>

                    <form asp-action="RejectMembership" method="post" class="d-inline">
                        <input type="hidden" name="membershipId" value="@item.MembershipId" />
                        <button class="btn btn-danger btn-sm">Reject</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
