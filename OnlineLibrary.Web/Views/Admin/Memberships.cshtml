@model IEnumerable<OnlineLibrary.Web.Models.MembershipRequestViewModel>

<h2>Membership Requests</h2>

<table class="table table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Student</th>
            <th>Email</th>
            <th>Status</th>
            <th>Applied At</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <td>@m.FullName</td>
                <td>@m.Email</td>
                <td>@m.Status</td>
                <td>@m.AppliedAt.ToString("yyyy-MM-dd")</td>
                <td>
                    @if (m.Status == "Pending")
                    {
                        <form asp-action="ApproveMembership" method="post" style="display:inline">
                            <input type="hidden" name="id" value="@m.MembershipId" />
                            <button class="btn btn-success btn-sm">Approve</button>
                        </form>

                        <form asp-action="RejectMembership" method="post" style="display:inline">
                            <input type="hidden" name="id" value="@m.MembershipId" />
                            <button class="btn btn-danger btn-sm">Reject</button>
                        </form>
                    }
                    else
                    {
                        <span class="badge bg-success">Approved</span>
                    }

                </td>
            </tr>
        }
    </tbody>
</table>
